{% extends 'base.html.twig' %}

{% block title %}About {{ book.title }} {% endblock %}

{% block body %}
<body>
  <h1>{{ book.title }}</h1>
  <table class="table">
      <tbody>
          <tr>
              <th>Genres</th>
              <td>{{ book.genres|join(', ') }}</td>
          </tr>
          <tr>
              <th>Author</th>
              <td>{{ book.author }}</td>
          </tr>
          <tr>
              <th>Collection</th>
              <td> <a href="/bookcollection/{{book.collection.id}}">{{book.collection}} </a> </td>
          </tr>
      </tbody>
  </table>
</body>
{% endblock %}