{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
    <h1>Membre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ membre.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ membre.description }}</td>
            </tr>
            <tr>
                <th>Collection</th>
                {% if membre.bookcollection == null %}
                    <td><a href="{{ path('app_bookcollection_new', {'membre_id': membre.id}) }}">add new</a></td>
                {% else %}
                <td><a href="{{ path('app_bookcollection_show', {'id' : membre.bookcollection.id}) }}">{{ membre.bookcollection }}</a></td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_membre_index') }}">back to list</a>

    <a href="{{ path('app_membre_edit', {'id': membre.id}) }}">edit</a>

    {{ include('membre/_delete_form.html.twig') }}
{% endblock %}
