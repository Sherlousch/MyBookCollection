{% extends 'base.html.twig' %}

{% block title %}Bookcollection index{% endblock %}

{% block body %}
<h1>Bookcollection index</h1>

<table class="table">
  <thead>
    <tr>
        <th>Description</th>
        <th>Membre</th>
    </tr>
  </thead>
  <tbody>
  {% for bookcollection in bookcollections %}
      <tr>
          <td>{{ bookcollection.description }}</td>
          <td>{{ bookcollection.membre }}</td>
          <td>
              <a href="{{ path('app_bookcollection_show', {'id': bookcollection.id}) }}">show</a>
              <a href="{{ path('app_bookcollection_edit', {'id': bookcollection.id}) }}">edit</a>
          </td>
      </tr>
  {% else %}
      <tr>
          <td colspan="4">no records found</td>
      </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}
